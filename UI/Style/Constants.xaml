<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:system="clr-namespace:System;assembly=mscorlib">
    <system:Double x:Key="MaxWindowWidth">1300</system:Double>
    <system:Double x:Key="MinWindowWidth">140</system:Double>
    <system:Double x:Key="MaxWindowHeight">700</system:Double>
    <system:Double x:Key="MinWindowHeight">120</system:Double>

    <system:Double x:Key="FontSizeNormal">11</system:Double>
    <system:Double x:Key="FontSizeBig">14</system:Double>
    <system:Double x:Key="FontSizeBigger">18</system:Double>

    <Color x:Key="WindowBackgoundLightColor">White</Color>
    <Color x:Key="WindowBackgoundDarkColor">#F0F0F0</Color>

    <LinearGradientBrush x:Key="WindowBackgroundBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="{StaticResource WindowBackgoundLightColor}" Offset="0.0"/>
        <GradientStop Color="{StaticResource WindowBackgoundDarkColor}" Offset="0.9" />
    </LinearGradientBrush>
    <LinearGradientBrush x:Key="WindowBackgroundBrushTransparent" StartPoint="0,0" EndPoint="1,1" Opacity="0.7">
        <GradientStop Color="{StaticResource WindowBackgoundLightColor}" Offset="0.0"/>
        <GradientStop Color="{StaticResource WindowBackgoundDarkColor}" Offset="0.9" />
    </LinearGradientBrush>
</ResourceDictionary>